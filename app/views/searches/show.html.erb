<h1>Search Result</h1>
<% if @search.search_books.empty? %>
	<p>No Records Found</p>
<% else %>
	<% @search.search_books.each do |c| %>
		<div>
			<h1><%= link_to c.name %></h1>
			<p>Price: $<%= c.price %></p>
			<p>Category: <%= c.category %></p>
			<p>ISBN: <%= c.isbn %></p>
		</div>
	<% end %>
<% end %>